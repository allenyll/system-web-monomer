<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.allenyll.sw.system.mapper.product.SkuMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.allenyll.sw.common.entity.product.Sku" id="skuMap">
        <result property="id" column="id"/>
        <result property="goodsId" column="goods_id"/>
        <result property="skuName" column="sku_name"/>
        <result property="skuCode" column="sku_code"/>
        <result property="skuBarCode" column="sku_bar_code"/>
        <result property="skuNum" column="sku_num"/>
        <result property="specValue" column="spec_value"/>
        <result property="skuStock" column="sku_stock"/>
        <result property="warnStock" column="warn_stock"/>
        <result property="skuPrice" column="sku_price"/>
        <result property="skuStatus" column="sku_status"/>
        <result property="picUrl" column="pic_url"/>
        <result property="isDelete" column="is_delete"/>
        <result property="addUser" column="add_user"/>
        <result property="addTime" column="add_time"/>
        <result property="updateUser" column="update_user"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        goods_id
        sku_name
        sku_code
        sku_bar_code
        sku_num
        spec_value
        sku_stock
        warn_stock
        sku_price
        sku_status
        pic_url
        is_delete
        add_user
        add_time
        update_user
        update_time
    </sql>

</mapper>
